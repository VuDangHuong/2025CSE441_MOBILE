<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firebasedemo">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FireBaseDemo">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.ProfileActivity"
            android:exported="false" />

        <activity
            android:name=".ui.directory.UnitsDirectoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.directory.UnitDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.directory.StaffDirectoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.directory.StaffDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.directory.StudentDirectoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.directory.StudentDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.directory.StaffListActivity"
            android:exported="false" />
    </application>

</manifest>